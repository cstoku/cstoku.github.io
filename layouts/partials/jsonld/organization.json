{{- $img := .Site.GetPage "section" "img" }}
{
  "@context": "http://schema.org",
  "@id": "{{ absURL "/" }}#organization",
  "@type": "Organization",
  {{- with $img.Resources.GetMatch "favicon" }}
  "logo": {
    "@type": "ImageObject",
    "url": "{{ .Permalink }}",
    "width": {{ .Width }},
    "height": {{ .Height }}
  },
  {{- end }}
  "member": {
    "@id": "{{ absURL "/" }}#person"
  },
  {{- with $img.Resources.GetMatch "favicon" }}
  "image": {
    "@type": "ImageObject",
    "url": "{{ .Permalink }}",
    "width": {{ .Width }},
    "height": {{ .Height }}
  },
  {{- end }}
  "url": "{{ absURL "/" }}",
  "name": "{{ .Site.Title }}"
}
