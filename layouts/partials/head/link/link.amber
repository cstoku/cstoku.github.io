$author_link = index(Site.Author, "page")
if $author_link
  link
    [rel="author"]
    [href=absLangURL($author_link)]

each $page in Translations
  link
    [rel="alternate"]
    [href=$page.Permalink]
    [hreflang=$page.Lang]

each $format in AlternativeOutputFormats
  link
    [rel=$format.Rel]
    [type=$format.MediaType.Type]
    [href=$format.Permalink]
