.navigation-cursor {
  position: fixed;
  bottom: 0px;
  right: 0px;
  width: 100%;
  height: 35px;
  margin-bottom: 3%;
  z-index: 10;
  opacity: 0;

  & span {
    display: inline-block;
    width: 70px;
    height: 10px;
    background-color: white;

    &.lbar {
      transform: rotate(18deg) translate(3px);
    }
    &.rbar {
      transform: rotate(-18deg) translate(-3px);
    }
  }
}

.pos-observe {
  position: absolute;
  top: 50px;
  z-index: -10;
}

@media (--smartphone) {
  .navigation-cursor span {
    width: 60px;
    height: 8px;
  }
}

@media (height < 550px) {
  .navigation-cursor {
    display: none;
  }
}
