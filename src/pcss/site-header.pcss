.site-header {
  padding: 10px 0;
  margin-bottom: 20px;
  background-color: black;
  color: white;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2px 2px rgba(0, 0, 0, 0.2);
}

.site-header h1 {
  font-size: 24px;
  font-weight: 800;
  line-height: 1.25;
}

.site-header a {
  text-decoration: none;
  color: #ffffff;
}
