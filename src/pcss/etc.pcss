.flex {
  display: flex;

  &.flex-row {
    flex-direction: row;
  }
  &.flex-column {
    flex-direction: column;
  }

  &.flex-center {
    justify-content: center;
    align-items: center;
  }
}

.hide {
  display: none;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: 400;
  color: color-mod(var(--colorPrimaryText) alpha(-0.1));
}
