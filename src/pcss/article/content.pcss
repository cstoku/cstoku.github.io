.content {
  margin: 20px 0;

  & *:first-child {
    margin-top: unset;
  }

  & h1 {
    font-size: var(--fontArticleH1Size);
    padding: var(--paddingArticleH1Size);
    margin: var(--marginArticleH1Size);
    border-left: solid 5px var(--colorPrimary);
    border-bottom: solid 1px var(--colorDivider);
  }
  & h2 {
    font-size: var(--fontArticleH2Size);
    padding: var(--paddingArticleH2Size);
    margin: var(--marginArticleH2Size);
    border-left: solid 3px var(--colorPrimary);
    border-bottom: solid 1px var(--colorDivider);
  }
  & h3 {
    font-size: var(--fontArticleH3Size);
    padding: var(--paddingArticleH3Size);
    margin: var(--marginArticleH3Size);
    border-left: solid 2px var(--colorPrimary);
    border-bottom: solid 1px var(--colorDivider);
  }
  & h4 {
    font-size: var(--fontArticleH4Size);
    padding: var(--paddingArticleH4Size);
    margin: var(--marginArticleH4Size);
    border-left: solid 2px var(--colorDivider);
    border-bottom: solid 1px var(--colorDivider);
  }
  & h5 {
    font-size: var(--fontArticleH5Size);
    padding: var(--paddingArticleH5Size);
    margin: var(--marginArticleH5Size);
    border-bottom: solid 1px var(--colorDivider);
  }
  & h6 {
    font-size: var(--fontArticleH6Size);
    padding: var(--paddingArticleH6Size);
    margin: var(--marginArticleH6Size);
  }

  & p {
    margin: 0.5em 0;
    line-height: 1.5em;
  }

  & ul, & ol {
    margin: 1em 0;
    padding-left: 2em;
    line-height: 1.5em;
  }

  & ul {
    list-style-type: none;

    & li::before {
      content: "\2013";
      font-weight: 700;
      margin: 0 0.5em 0 -1em;
    }
  }

  & .highlight {
    margin: 1em;
    overflow: auto;
    boder-radius: 2px;
    box-shadow: 0 0 1px rgba(0, 0, 0, 1);

    & pre code {
      font-family: 'Ricty Diminished', monospace;
      font-size: 16px;
    }

    & table {
      border: solid 1em transparent;

      & td:last-child pre {
        margin-left: 0.5em;
      }
    }
  }

  & table:not(.lntable) {
    width: 80%;
    min-width: 320px;
    margin: 20px auto;

    & tr {
      & th {
        padding: 1em;
        color: color-mod(var(--colorPrimaryText) alpha(40%));
        border-top: solid 1px var(--colorDivider);
        border-bottom: solid 1px var(--colorDivider);
      }

      & td {
        padding: 1em;
        border-bottom: solid 1px var(--colorDivider);
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
        max-width: 1px;
      }
    }

    & tbody tr:hover {
      background-color: color-mod(var(--colorPrimary) alpha(20%));
    }
  }
  & figure amp-img {
    margin: auto;
  }
}

@media (--ge-smartphone) {
  .content {
    padding: 0 50px;

    & figure amp-img {
      max-width: 60%;
    }
  }
}

@media (--smartphone) {
  .content {
    padding: 0 20px;
  }
}